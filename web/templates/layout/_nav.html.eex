<nav class="ui fixed menu inverted navbar">
  <a href="<%= page_path(@conn, :index) %>" class="brand item">Punky</a>
  <div class="right menu">
    <%= if user_signed_in?(@conn) do %>
      <a href="#" class="item"><%= current_user(@conn).name %></a>
      <a href="<%= sessions_path(@conn, :destroy) %>" class="item">Sign out</a>
    <% else %>
      <a href="<%= sessions_path(@conn, :new) %>" class="item">Sign in</a>
      <a href="<%= users_path(@conn, :new) %>" class="item">Sign up</a>
    <% end %>
  </div>
</nav>
